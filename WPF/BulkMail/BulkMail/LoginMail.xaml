<addCtrl:HLWindowExt x:Class="BulkMail.LoginMail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:addCtrl="clr-namespace:WPF.CustomControl;assembly=WPF.CustomControl"
        Title="LoginMail" Height="200" Width="345" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal"   Margin="10">
                <TextBlock Text="帐号："  VerticalAlignment="Center" TextAlignment="Center" Margin="5"/>
                <TextBox x:Name="txt_LoginName"  Text="453352038@qq.com"  Margin="5" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"   Margin="10">
                <TextBlock Text="密码：" Grid.Column="0"  TextAlignment="Center"  Margin="5"/>
                <PasswordBox  x:Name="txt_Password" Width="250"  Password="11991019bsa"   Margin="5"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="135,10,10,10">
                <Button  Content="Login" x:Name="btn_OK" Margin="5" Width="80"></Button>
                <Button  Content="Close" x:Name="btn_Close" Margin="5"  Width="80"></Button>
            </StackPanel>

        </StackPanel >
</addCtrl:HLWindowExt>
