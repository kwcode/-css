<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tCtrl="clr-namespace:T.WPF.TControls"
                    >


    <Style TargetType="tCtrl:TImageButton">
        <Setter Property="SnapsToDevicePixels" Value="true" />
       
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="tCtrl:TImageButton">
                    <Grid>
                        <StackPanel Orientation="Horizontal" IsEnabled="False">
                            <Image Stretch="None" x:Name="TimgIcon" Margin="0,0,0,0" Source="{TemplateBinding HLInformationIconSource}"></Image>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>