<Window x:Class="WPFService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="服务器" Height="320" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Height="200"   Margin="2" Name="txt_msg" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"  VerticalAlignment="Top" Grid.Row="0" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="5">
            <Button Content="启动服务"  Height="23"   Name="btn_StartService"  Margin="5" Width="75" Click="btn_StartService_Click" />
            <Button Content="停止服务"   Height="23"   Name="btn_StopService"  Width="75" Click="btn_StopService_Click" />
        </StackPanel>
    </Grid>
</Window>
